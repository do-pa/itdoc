{
    "openapi": "3.0.0",
    "info": {
        "title": "API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/signup": {
            "post": {
                "summary": "사용자로 부터 아이디와 패스워드를 받아 회원가입을 수행합니다.",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "example": {
                                    "username": {
                                        "description": "아이디",
                                        "example": "penekhun",
                                        "required": true
                                    },
                                    "password": {
                                        "description": "패스워드",
                                        "example": "1234567",
                                        "required": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "password must be at least 8 characters"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{userId}": {
            "get": {
                "summary": "사용자 ID를 받아 사용자 정보를 반환합니다.",
                "tags": ["User"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        },
        "/users/{userId}/friends/{friendId}": {
            "delete": {
                "summary": "특정 사용자의 친구를 삭제합니다.",
                "tags": ["User"],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "friendId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Unknown Status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {}
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "summary": "회원 목록을 조회합니다.",
                "tags": ["User"],
                "responses": {
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "error": "size are required"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}

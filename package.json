{
    "name": "itdoc",
    "version": "0.2.1",
    "description": "Test-driven documentation for RESTful services",
    "license": "Apache-2.0",
    "bin": {
        "itdoc": "./build/bin/index.js"
    },
    "author": {
        "name": "Moon Seonghun",
        "email": "penekhun@gamil.com",
        "url": "https://www.github.com/penekhun"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/do-pa/itdoc.git"
    },
    "bugs": {
        "url": "https://github.com/do-pa/itdoc/issues/"
    },
    "discord": "https://discord.gg/ZhXk7VSu5Z",
    "homepage": "https://itdoc.kr",
    "logo": "https://github.com/user-attachments/assets/e84820f5-194e-48c0-99d6-f43d8038a157",
    "type": "module",
    "exports": {
        ".": {
            "types": "./build/index.d.ts",
            "import": "./build/index.js",
            "require": "./build/index.cjs",
            "default": "./build/index.js"
        }
    },
    "main": "build/index.cjs",
    "module": "build/index.js",
    "types": "build/index.d.ts",
    "files": [
        "build",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "documentation",
        "test",
        "rest",
        "openapi",
        "swagger",
        "restdocs",
        "typescript"
    ],
    "scripts": {
        "build": "pnpm run clean && tsup",
        "ci": "pnpm run prettier:check && pnpm run lint && pnpm run test && pnpm run build",
        "clean": "rimraf build",
        "lint": "eslint .",
        "lint-staged": "lint-staged",
        "prepare": "husky && husky install",
        "prettier": "prettier \"{lib,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
        "prettier:check": "prettier \"{lib,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
        "test": "pnpm build && pnpm test:unit && pnpm test:e2e",
        "test:unit": "mocha",
        "test:e2e": "pnpm --filter example-express test && pnpm --filter testframework-compatibility-test test",
        "docs": "cd itdoc-doc && pnpm install && pnpm run start",
        "docs-build": "cd itdoc-doc && pnpm install && pnpm run build"
    },
    "lint-staged": {
        "*.{ts,mts}": [
            "prettier --config .prettierrc --write",
            "eslint --fix"
        ],
        "*.{json,md}": [
            "prettier --config .prettierrc --write"
        ]
    },
    "mocha": {
        "extensions": [
            ".ts"
        ],
        "node-option": [
            "import=tsx"
        ],
        "spec": "lib/__tests__/**/*.test.ts"
    },
    "dependencies": {
        "@redocly/cli": "^1.34.0",
        "@redocly/openapi-core": "^1.34.2",
        "chalk": "^4.1.2",
        "commander": "^13.1.0",
        "consola": "^3.4.2",
        "dot": "^1.1.3",
        "dotenv": "^16.3.1",
        "fast-glob": "^3.3.3",
        "openai": "^4.90.0",
        "supertest": "^7.0.0",
        "widdershins": "^4.0.1"
    },
    "devDependencies": {
        "@eslint/js": "~9.17",
        "@types/chai": "^5.0.1",
        "@types/eslint__js": "~8.42",
        "@types/mocha": "^10.0.10",
        "@types/node": "~20",
        "@types/sinon": "^17.0.2",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/parser": "~8.19",
        "chai": "^5.2.0",
        "eslint": "~9.17",
        "eslint-config-prettier": "~9.1",
        "eslint-plugin-jsdoc": "^50.6.0",
        "eslint-plugin-license-header": "^0.8.0",
        "eslint-plugin-mocha": "^10.5.0",
        "globals": "~15.14",
        "husky": "^8.0.0",
        "lint-staged": "^15.4.3",
        "prettier": "~3.4",
        "rimraf": "^6.0.1",
        "sinon": "^20.0.0",
        "sort-package-json": "^2.15.1",
        "supports-color": "^10.0.0",
        "tsup": "^8.4.0",
        "tsx": "^4.19.3",
        "typescript": "~5.7",
        "typescript-eslint": "~8.19"
    },
    "peerDependencies": {
        "jest": "^29.0.0",
        "mocha": "^11.0.0"
    },
    "packageManager": "pnpm@10.5.2",
    "engines": {
        "node": ">=20"
    }
}
